/*
Returns a Set of Element annotated with Risk.
TODO: Currently the method does not distinguish between different UML Model Elements. All the methods SetOf* are equal.
*/ 

operation Package RisksAsSet() : Set {
	var returnValue = new Set;
	for(son in self.getPackagedElements()){
		if(son.isRisk()){
			returnValue.add(son);
		}
	} 
	return returnValue;
}
 

/*
Check if the element is annotated with Risk.
*/ 
operation Element isRisk() : Boolean {
	//var plugin : new Native("at.ac.tuwien.dsg.T4UME");
	//var UMLUtil = plugin.getUMLUtil();
	//var ModelerAgent = plugin.getModelerAgent();	
	
	/*
	if(self.isUndefined() or self.getAppliedStereotypes().isUndefined() ){
		("the element is undefined").println();
		showError("Method: isRisk() : Boolean in Risk.eol");
	}
	*/
	return self.getAppliedStereotypes()->exists(s | s.name = "Risk");
}


//getters
/*
Returns a Set of description of stereotype Risk.
*/ 
operation Element getDescriptionOfRiskAsSet() : Set {
	var returnValues = new Set;
	var values = self.getValue(self.getStereotype("Risk"), "description");
	for(value in values){
		returnValues.add(value);
	}
	return returnValues;
}


/*
Returns a Set of measurement of stereotype Risk.
*/ 
operation Element getMeasurementOfRiskAsSet() : Set {
	var returnValues = new Set;
	var values = self.getValue(self.getStereotype("Risk"), "measurement");
	for(value in values){
		returnValues.add(value);
	}
	return returnValues;
}




//setters
// -- Setter for Property Risk::description	
// org.eclipse.uml2.uml.internal.impl.PrimitiveTypeImpl@6f2a8bc8 (name: String, visibility: <unset>) (isLeaf: false, isAbstract: false, isFinalSpecialization: false)
operation Element setDescriptionProperty( value : Object) {
		//setStereotypePropertyValue(NamedElement namedElement, Stereotype stereotype, Property property, Object value) {
		
		var plugin : new Native("at.ac.tuwien.dsg.T4UME");
		var UMLUtil = plugin.getUMLUtil();
		var ModelerAgent = plugin.getModelerAgent();	
		
		var current_coreProfile = Profile.all.selectOne(e|e.name = "CoreProfile");
		
		var stereotype = current_coreProfile.getRiskStereotype();
		var property = current_coreProfile.getDescriptionProperty();
		ModelerAgent.setStereotypePropertyValue(self, stereotype, property, value);
}
// -- Setter for Property Risk::measurement	
// org.eclipse.uml2.uml.internal.impl.ClassImpl@7bad1dc4 (name: MeasurementClass, visibility: <unset>) (isLeaf: false, isAbstract: false, isFinalSpecialization: false) (isActive: false)
operation Element setMeasurementProperty( value : Object) {
		//setStereotypePropertyValue(NamedElement namedElement, Stereotype stereotype, Property property, Object value) {
		
		var plugin : new Native("at.ac.tuwien.dsg.T4UME");
		var UMLUtil = plugin.getUMLUtil();
		var ModelerAgent = plugin.getModelerAgent();	
		
		var current_coreProfile = Profile.all.selectOne(e|e.name = "CoreProfile");
		
		var stereotype = current_coreProfile.getRiskStereotype();
		var property = current_coreProfile.getMeasurementProperty();
		ModelerAgent.setStereotypePropertyValue(self, stereotype, property, value);
}

//getters of Property Definitions
//--get description Property Definition. It does not change then it is cached.
@cache
operation Stereotype getDescriptionPropertyDefinition() : Property {
	var allAttributes = self.getAllAttributes();
	var descriptionProperty = allAttributes.selectOne(s|s.name = "description");
	return descriptionProperty;
}

//--get measurement Property Definition. It does not change then it is cached.
@cache
operation Stereotype getMeasurementPropertyDefinition() : Property {
	var allAttributes = self.getAllAttributes();
	var measurementProperty = allAttributes.selectOne(s|s.name = "measurement");
	return measurementProperty;
}


/*
Check if a Set of description of stereotype Risk is empty.
*/ 
operation Element isDescriptionOfRiskEmpty() : Boolean{
	var returnValues = new Set();
	var values = self.getValue(self.getStereotype("Risk"), "description");
	for(value in values){
		returnValues.add(value);
	}
	var empty = returnValues.isEmpty();
	return empty;
}
/*
Check if a Set of measurement of stereotype Risk is empty.
*/ 
operation Element isMeasurementOfRiskEmpty() : Boolean{
	var returnValues = new Set();
	var values = self.getValue(self.getStereotype("Risk"), "measurement");
	for(value in values){
		returnValues.add(value);
	}
	var empty = returnValues.isEmpty();
	return empty;
}
