import "../../../utilities.eol";

//do not import the profile library to avoid circular dependencies


/*
Returns a Set of Element annotated with BeliefAgent.
TODO: Currently the method does not distinguish between different UML Model Elements. All the methods SetOf* are equal.
*/ 

operation Package BeliefAgentsAsSet() : Set {
	var returnValue = new Set;
	for(son in self.getPackagedElements()){
		if(son.isBeliefAgent()){
			returnValue.add(son);
		}
	} 
	return returnValue;
}
 

/*
Check if the element is annotated with BeliefAgent.
*/ 
operation Element isBeliefAgent() : Boolean {
	//var plugin : new Native("at.ac.tuwien.dsg.T4UME");
	//var UMLUtil = plugin.getUMLUtil();
	//var ModelerAgent = plugin.getModelerAgent();	
	
	/*
	if(self.isUndefined() or self.getAppliedStereotypes().isUndefined() ){
		("the element is undefined").println();
		showError("Method: isBeliefAgent() : Boolean in BeliefAgent.eol");
	}
	*/
	return self.getAppliedStereotypes()->exists(s | s.name = "BeliefAgent");
}


//getters
/*
Returns a Set of beliefStatement of stereotype BeliefAgent.
*/ 
operation Element getBeliefStatementOfBeliefAgentAsSet() : Set {
	var returnValues = new Set;
	var values = self.getValue(self.getStereotype("BeliefAgent"), "beliefStatement");
	for(value in values){
		returnValues.add(value);
	}
	return returnValues;
}




//setters
// -- Setter for Property BeliefAgent::beliefStatement	
// org.eclipse.uml2.uml.internal.impl.StereotypeImpl@66a76e93 (name: BeliefStatement, visibility: <unset>) (isLeaf: false, isAbstract: true, isFinalSpecialization: false) (isActive: false)
operation Element setBeliefStatementProperty( value : Object) {
		//setStereotypePropertyValue(NamedElement namedElement, Stereotype stereotype, Property property, Object value) {
		
		var plugin : new Native("at.ac.tuwien.dsg.T4UME");
		var UMLUtil = plugin.getUMLUtil();
		var ModelerAgent = plugin.getModelerAgent();	
		
		var current_coreProfile = Profile.all.selectOne(e|e.name = "CoreProfile");
		
		var stereotype = current_coreProfile.getBeliefAgentStereotype();
		var property = current_coreProfile.getBeliefStatementProperty();
		ModelerAgent.setStereotypePropertyValue(self, stereotype, property, value);
}

//getters of Property Definitions
//--get beliefStatement Property Definition. It does not change then it is cached.
@cache
operation Stereotype getBeliefStatementPropertyDefinition() : Property {
	var allAttributes = self.getAllAttributes();
	var beliefStatementProperty = allAttributes.selectOne(s|s.name = "beliefStatement");
	return beliefStatementProperty;
}


/*
Check if a Set of beliefStatement of stereotype BeliefAgent is empty.
*/ 
operation Element isBeliefStatementOfBeliefAgentEmpty() : Boolean{
	var returnValues = new Set();
	var values = self.getValue(self.getStereotype("BeliefAgent"), "beliefStatement");
	for(value in values){
		returnValues.add(value);
	}
	var empty = returnValues.isEmpty();
	return empty;
}
