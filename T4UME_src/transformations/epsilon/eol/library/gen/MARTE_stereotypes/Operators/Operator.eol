}

//getters of Property Definitions
//--get symbol Property Definition. It does not change then it is cached.
@cache
operation Stereotype getSymbolPropertyDefinition() : Property {
	var allAttributes = self.getAllAttributes();
	var symbolProperty = allAttributes.selectOne(s|s.name = "symbol");
	return symbolProperty;
}

//--get arity Property Definition. It does not change then it is cached.
@cache
operation Stereotype getArityPropertyDefinition() : Property {
	var allAttributes = self.getAllAttributes();
	var arityProperty = allAttributes.selectOne(s|s.name = "arity");
	return arityProperty;
}


/*
Check if a Set of symbol of stereotype Operator is empty.
*/ 
operation Element isSymbolOfOperatorEmpty() : Boolean{
	var returnValues = new Set();
	var values = self.getValue(self.getStereotype("Operator"), "symbol");
	for(value in values){
		returnValues.add(value);
	}
	var empty = returnValues.isEmpty();
	return empty;
}
/*
Check if a Set of arity of stereotype Operator is empty.
*/ 
operation Element isArityOfOperatorEmpty() : Boolean{
	var returnValues = new Set();
	var values = self.getValue(self.getStereotype("Operator"), "arity");
	for(value in values){
		returnValues.add(value);
	}
	var empty = returnValues.isEmpty();
	return empty;
}
