import "../../../utilities.eol";

//do not import the profile library to avoid circular dependencies


/*
Returns a Set of Element annotated with Operator.
TODO: Currently the method does not distinguish between different UML Model Elements. All the methods SetOf* are equal.
*/ 

operation Package OperatorsAsSet() : Set {
	var returnValue = new Set;
	for(son in self.getPackagedElements()){
		if(son.isOperator()){
			returnValue.add(son);
		}
	} 
	return returnValue;
}
 

/*
Check if the element is annotated with Operator.
*/ 
operation Element isOperator() : Boolean {
	//var plugin : new Native("at.ac.tuwien.dsg.T4UME");
	//var UMLUtil = plugin.getUMLUtil();
	//var ModelerAgent = plugin.getModelerAgent();	
	
	/*
	if(self.isUndefined() or self.getAppliedStereotypes().isUndefined() ){
		("the element is undefined").println();
		showError("Method: isOperator() : Boolean in Operator.eol");
	}
	*/
	return self.getAppliedStereotypes()->exists(s | s.name = "Operator");
}


//getters
/*
Returns a Set of symbol of stereotype Operator.
*/ 
operation Element getSymbolOfOperatorAsSet() : Set {
	var returnValues = new Set;
	var values = self.getValue(self.getStereotype("Operator"), "symbol");
	for(value in values){
		returnValues.add(value);
	}
	return returnValues;
}


/*
Returns a Set of arity of stereotype Operator.
*/ 
operation Element getArityOfOperatorAsSet() : Set {
	var returnValues = new Set;
	var values = self.getValue(self.getStereotype("Operator"), "arity");
	for(value in values){
		returnValues.add(value);
	}
	return returnValues;
}




//setters
// -- Setter for Property Operator::symbol	
// org.eclipse.uml2.uml.internal.impl.PrimitiveTypeImpl@270530c6 (name: String, visibility: <unset>) (isLeaf: false, isAbstract: false, isFinalSpecialization: false)
operation Element setSymbolProperty( value : Object) {
		//setStereotypePropertyValue(NamedElement namedElement, Stereotype stereotype, Property property, Object value) {
		
		var plugin : new Native("at.ac.tuwien.dsg.T4UME");
		var UMLUtil = plugin.getUMLUtil();
		var ModelerAgent = plugin.getModelerAgent();	
		
		var current_operators = Profile.all.selectOne(e|e.name = "Operators");
		
		var stereotype = current_operators.getOperatorStereotype();
		var property = current_operators.getSymbolProperty();
		ModelerAgent.setStereotypePropertyValue(self, stereotype, property, value);
}
