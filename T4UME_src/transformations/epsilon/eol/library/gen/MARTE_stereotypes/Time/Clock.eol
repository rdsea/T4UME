/*
Returns a Set of Element annotated with Clock.
TODO: Currently the method does not distinguish between different UML Model Elements. All the methods SetOf* are equal.
*/ 

operation Package ClocksAsSet() : Set {
	var returnValue = new Set;
	for(son in self.getPackagedElements()){
		if(son.isClock()){
			returnValue.add(son);
		}
	} 
	return returnValue;
}
 

/*
Check if the element is annotated with Clock.
*/ 
operation Element isClock() : Boolean {
	//var plugin : new Native("at.ac.tuwien.dsg.T4UME");
	//var UMLUtil = plugin.getUMLUtil();
	//var ModelerAgent = plugin.getModelerAgent();	
	
	/*
	if(self.isUndefined() or self.getAppliedStereotypes().isUndefined() ){
		("the element is undefined").println();
		showError("Method: isClock() : Boolean in Clock.eol");
	}
	*/
	return self.getAppliedStereotypes()->exists(s | s.name = "Clock");
}


//getters
/*
Returns a Set of standard of stereotype Clock.
*/ 
operation Element getStandardOfClockAsSet() : Set {
	var returnValues = new Set;
	var values = self.getValue(self.getStereotype("Clock"), "standard");
	for(value in values){
		returnValues.add(value);
	}
	return returnValues;
}


