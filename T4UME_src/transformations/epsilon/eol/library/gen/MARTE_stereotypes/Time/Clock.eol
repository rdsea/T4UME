//getters of Property Definitions
//--get standard Property Definition. It does not change then it is cached.
@cache
operation Stereotype getStandardPropertyDefinition() : Property {
	var allAttributes = self.getAllAttributes();
	var standardProperty = allAttributes.selectOne(s|s.name = "standard");
	return standardProperty;
}

//--get type Property Definition. It does not change then it is cached.
@cache
operation Stereotype getTypePropertyDefinition() : Property {
	var allAttributes = self.getAllAttributes();
	var typeProperty = allAttributes.selectOne(s|s.name = "type");
	return typeProperty;
}

//--get unit Property Definition. It does not change then it is cached.
@cache
operation Stereotype getUnitPropertyDefinition() : Property {
	var allAttributes = self.getAllAttributes();
	var unitProperty = allAttributes.selectOne(s|s.name = "unit");
	return unitProperty;
}


/*
Check if a Set of standard of stereotype Clock is empty.
*/ 
operation Element isStandardOfClockEmpty() : Boolean{
	var returnValues = new Set();
	var values = self.getValue(self.getStereotype("Clock"), "standard");
	for(value in values){
		returnValues.add(value);
	}
	var empty = returnValues.isEmpty();
	return empty;
}
