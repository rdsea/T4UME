//setters
// -- Setter for Property Clock::standard	
// org.eclipse.uml2.uml.internal.impl.EnumerationImpl@2ea663d0 (name: TimeStandardKind, visibility: <unset>) (isLeaf: false, isAbstract: false, isFinalSpecialization: false)
operation Element setStandardProperty( value : Object) {
		//setStereotypePropertyValue(NamedElement namedElement, Stereotype stereotype, Property property, Object value) {
		
		var plugin : new Native("at.ac.tuwien.dsg.T4UME");
		var UMLUtil = plugin.getUMLUtil();
		var ModelerAgent = plugin.getModelerAgent();	
		
		var current_time = Profile.all.selectOne(e|e.name = "Time");
		
		var stereotype = current_time.getClockStereotype();
		var property = current_time.getStandardProperty();
		ModelerAgent.setStereotypePropertyValue(self, stereotype, property, value);
}
