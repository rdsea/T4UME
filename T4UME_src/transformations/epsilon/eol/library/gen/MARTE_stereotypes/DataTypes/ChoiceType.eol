/*
Returns a Set of Element annotated with ChoiceType.
TODO: Currently the method does not distinguish between different UML Model Elements. All the methods SetOf* are equal.
*/ 

operation Package ChoiceTypesAsSet() : Set {
	var returnValue = new Set;
	for(son in self.getPackagedElements()){
		if(son.isChoiceType()){
			returnValue.add(son);
		}
	} 
	return returnValue;
}
 

/*
Check if the element is annotated with ChoiceType.
*/ 
operation Element isChoiceType() : Boolean {
	//var plugin : new Native("at.ac.tuwien.dsg.T4UME");
	//var UMLUtil = plugin.getUMLUtil();
	//var ModelerAgent = plugin.getModelerAgent();	
	
	/*
	if(self.isUndefined() or self.getAppliedStereotypes().isUndefined() ){
		("the element is undefined").println();
		showError("Method: isChoiceType() : Boolean in ChoiceType.eol");
	}
	*/
	return self.getAppliedStereotypes()->exists(s | s.name = "ChoiceType");
}


//getters
/*
Returns a Set of choiceAttrib of stereotype ChoiceType.
*/ 
operation Element getChoiceAttribOfChoiceTypeAsSet() : Set {
	var returnValues = new Set;
	var values = self.getValue(self.getStereotype("ChoiceType"), "choiceAttrib");
	for(value in values){
		returnValues.add(value);
	}
	return returnValues;
}


/*
Returns a Set of defaultAttrib of stereotype ChoiceType.
*/ 
operation Element getDefaultAttribOfChoiceTypeAsSet() : Set {
	var returnValues = new Set;
	var values = self.getValue(self.getStereotype("ChoiceType"), "defaultAttrib");
	for(value in values){
		returnValues.add(value);
	}
	return returnValues;
}




//setters
// -- Setter for Property ChoiceType::choiceAttrib	
// org.eclipse.uml2.uml.internal.impl.ClassImpl@1d0898cc (name: Property, visibility: <unset>) (isLeaf: false, isAbstract: false, isFinalSpecialization: false) (isActive: false)
operation Element setChoiceAttribProperty( value : Object) {
		//setStereotypePropertyValue(NamedElement namedElement, Stereotype stereotype, Property property, Object value) {
		
		var plugin : new Native("at.ac.tuwien.dsg.T4UME");
		var UMLUtil = plugin.getUMLUtil();
		var ModelerAgent = plugin.getModelerAgent();	
		
		var current_dataTypes = Profile.all.selectOne(e|e.name = "DataTypes");
		
		var stereotype = current_dataTypes.getChoiceTypeStereotype();
		var property = current_dataTypes.getChoiceAttribProperty();
		ModelerAgent.setStereotypePropertyValue(self, stereotype, property, value);
}
