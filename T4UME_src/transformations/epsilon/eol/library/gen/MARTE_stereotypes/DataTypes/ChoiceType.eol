//getters of Property Definitions
//--get choiceAttrib Property Definition. It does not change then it is cached.
@cache
operation Stereotype getChoiceAttribPropertyDefinition() : Property {
	var allAttributes = self.getAllAttributes();
	var choiceAttribProperty = allAttributes.selectOne(s|s.name = "choiceAttrib");
	return choiceAttribProperty;
}

//--get defaultAttrib Property Definition. It does not change then it is cached.
@cache
operation Stereotype getDefaultAttribPropertyDefinition() : Property {
	var allAttributes = self.getAllAttributes();
	var defaultAttribProperty = allAttributes.selectOne(s|s.name = "defaultAttrib");
	return defaultAttribProperty;
}


/*
Check if a Set of choiceAttrib of stereotype ChoiceType is empty.
*/ 
operation Element isChoiceAttribOfChoiceTypeEmpty() : Boolean{
	var returnValues = new Set();
	var values = self.getValue(self.getStereotype("ChoiceType"), "choiceAttrib");
	for(value in values){
		returnValues.add(value);
	}
	var empty = returnValues.isEmpty();
	return empty;
}
/*
Check if a Set of defaultAttrib of stereotype ChoiceType is empty.
*/ 
operation Element isDefaultAttribOfChoiceTypeEmpty() : Boolean{
	var returnValues = new Set();
	var values = self.getValue(self.getStereotype("ChoiceType"), "defaultAttrib");
	for(value in values){
		returnValues.add(value);
	}
	var empty = returnValues.isEmpty();
	return empty;
}
